<Page
    x:Class="BuildBackup.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BuildBackup"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel>
            <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="20" TextWrapping="Wrap" Text="Destination Folder:" VerticalAlignment="Top"/>
            <ComboBox x:Name="comboBoxGoogleFolders" Margin="20" SelectionChanged="comboBoxGoogleFolders_SelectionChanged" RelativePanel.RightOf="textBlock1" RelativePanel.AlignVerticalCenterWith="textBlock1"/>
            <CheckBox x:Name="checkBoxDeleteOldFiles" Margin="20" Content="Delete Files Older Than " RelativePanel.Below="textBlock1"/>
            <TextBox x:Name="textBoxNumDays" Text="180" RelativePanel.RightOf="checkBoxDeleteOldFiles" RelativePanel.AlignVerticalCenterWith="checkBoxDeleteOldFiles"/>
            <TextBlock x:Name="textBlock2" Margin="20" Text="Days" RelativePanel.RightOf="textBoxNumDays" RelativePanel.AlignVerticalCenterWith="checkBoxDeleteOldFiles"/>
            <Button x:Name="buttonStartBackup" Margin="20" Click="buttonStartBackup_Click" Content="Start Backup" RelativePanel.Below="checkBoxDeleteOldFiles"/>
            <Button x:Name="buttonCancelBackup" Margin="20" Click="buttonCancelBackup_Click" Content="Cancel" RelativePanel.RightOf="buttonStartBackup" RelativePanel.Below="checkBoxDeleteOldFiles"/>
        </RelativePanel>
        <TextBox x:Name="textBoxStatus" Margin="20" TextWrapping="Wrap" VerticalAlignment="Bottom" ScrollViewer.VerticalScrollBarVisibility="Auto" Height="600" FontFamily="Courier New" TextChanged="textBoxStatus_TextChanged"/>
    </Grid>
</Page>
